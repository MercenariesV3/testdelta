title.BackgroundTransparency = 1
title.Font = Enum.Font.FredokaOne
title.TextColor3 = Color3.new(1, 1, 1)
title.TextSize = 28
title.TextStrokeTransparency = 0.9
title.ZIndex = 11
title.Parent = container
addShadowText(title)

